# ---------------------------------------------------------------------------
#   Add all components related to the interface.
# ---------------------------------------------------------------------------
function swift_create_interface_proxy_class (interface, destination, wrapper, meta)
    check_arguments (my, "interface, destination, wrapper, meta", my)

   new swift_class to swift_module
        . = "/// Implement interface methods "
        .name = swift_derive_proxy_protocol_name (my.interface)
        .objc_name = swift_derive_class_objc_name (swift_class, my.wrapper)
        .visibility = "internal"

        swift_create_inherit_nsobject (swift_class)
        swift_create_inherit (my.interface, swift_class, my.wrapper, my.meta)
        swift_create_class_property_context (swift_class)
        swift_create_class_constructor_context (swift_class, my.wrapper, my.meta)
        swift_create_interface_proxy_class_destructor (swift_class, my.wrapper, my.meta)

        swift_create_interface_proxy_class_inheritance (my.interface, swift_class, my.wrapper, my.meta)

        for swift_class.swift_method where count (0.swift_return) > 1
