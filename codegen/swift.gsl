# ---------------------------------------------------------------------------
#   Add implementation of the inherited constants and methods to the
#   interface proxy class.
# ---------------------------------------------------------------------------
function swift_create_interface_proxy_class_inheritance (interface, swift_class, wrapper, meta)
    check_arguments (my, "interface, swift_class, wrapper, meta", my)

    if count (my.swift_class.implemented, implemented.interface = my.interface.name)
        return
    endif

    for my.interface.inherit
        my.parent_interface = interface_global_find (inherit.interface, inherit.project)
        swift_create_interface_proxy_class_inheritance (my.parent_interface, my.swift_class, my.wrapper, my.meta)
    endfor

    for my.interface.constant
        swift_create_proxy_property_from_constant (constant, my.interface, my.swift_class, my.wrapper, my.meta)
    endfor

    for my.interface.method
        swift_create_class_method (my.interface, method, my.swift_class, my.wrapper, my.meta)
